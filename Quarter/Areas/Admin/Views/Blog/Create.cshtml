@model Blog

@{
    var blogCategories = (List<BlogCategory>)ViewData["BlogCategory"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Blog - Create</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
              <form enctype="multipart/form-data" method="post" class="forms-sample">
                <div class="form-group">
                  <label asp-for="Title">Title</label>
                  <input asp-for="Title" class="form-control" placeholder="Create Title">
                </div>
                <div class="form-group">
                  <label asp-for="Description">Description</label>
                  <input asp-for="Description" class="form-control" placeholder="Create Description">
                </div>
                <div class="form-group">
                    <label asp-for="BlogDetail.Content">Blog Content</label>
                    <textarea asp-for="BlogDetail.Content" class="form-control" placeholder="Add Built Year" ></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="MainFile">Main Image</label>
                    <input accept="image/*" class="form-control" asp-for="MainFile">
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input accept="image/*" class="form-control" asp-for="ImageFile">
                </div>
                <div class="form-group">
                    <h4 class="my-4">Select Categories</h4>
                    <div class="d-flex flex-wrap">
                        @for (var i = 0; i < blogCategories.Count; i++)
                       {
                            <div class="col-lg-6 form-group">
                                <input  type="checkbox" asp-for="@Model.BlogCategories[i].IsSelected" />
                                <label asp-for="@Model.BlogCategories[i].IsSelected">@blogCategories[i].Name</label>
                                <input  type="hidden" asp-for="@blogCategories[i].Id" />
                            </div>
                       }
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2 text-white">Submit</button>
                <button asp-controller="blog" asp-action="index" class="btn btn-secondary text-white">Cancel</button>
              </form>
            </div>
          </div>
        </div>
    </div>
</div>