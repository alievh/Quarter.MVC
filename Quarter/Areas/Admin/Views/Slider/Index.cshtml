@model List<Slider>

<div class="container">
    <div class="row">
       <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Slider - Table</h4>
              <div class="table-responsive">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary text-white" asp-controller="dashboard" asp-action="index">Go Back</a>
                    <a class="btn btn-success text-white" asp-controller="slider" asp-action="create">Create</a>
                </div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        Image
                      </th>
                      <th>
                        Title
                      </th>
                      <th>
                        Content
                      </th>
                      <th>
                        Setting
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var slider in Model)
                   {
                    <tr>
                        <td class="py-1">
                          @*<img src="~/assets/uploads/images/@slider.SliderImages.Where(n => n.SliderId == slider.Id).FirstOrDefault().Image.Url" alt="image"/>*@
                        </td>
                        <td>
                          @slider.Title
                        </td>
                        <td>
                          @slider.Content
                        </td>
                        <td>
                              <div class="d-flex">
                                  <a class="btn btn-primary text-white mx-1" asp-controller="slider" asp-action="detail">Detail</a>
                                  <a class="btn btn-warning text-white mx-1" asp-controller="slider" asp-action="update">Update</a>
                                  <a class="btn btn-danger text-white mx-1" asp-controller="slider" asp-action="delete">Delete</a>
                              </div>
                        </td>
                    </tr>
                   }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>