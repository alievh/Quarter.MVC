@model Category

<div class="container">
    <div class="row">
       <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Slider - Table</h4>
              <div class="table-responsive">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary text-white" asp-controller="category" asp-action="index">Go Back</a>
                </div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        SubCategory Name
                      </th>
                      <th>
                        Setting
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                     @foreach (var subCategory in Model.SubCategories)
                   {
                       if(subCategory.IsDeleted == false)
                       {
                           <tr>
                               <td>
                                 @subCategory.Name
                               </td>
                               <td>
                                   <div class="d-flex">
                                       <a class="btn btn-warning text-white mx-1" asp-controller="category" asp-action="updatesubcategory" asp-route-id="@subCategory.Id">Update</a>
                                       <a class="btn btn-danger text-white mx-1" asp-controller="category" asp-action="deletesubcategory" asp-route-id="@subCategory.Id">Delete</a>
                                   </div>
                               </td>
                           </tr>
                       }
                    }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>