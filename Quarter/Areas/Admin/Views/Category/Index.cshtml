@model List<Category>

<div class="container">
    <div class="row">
       <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Slider - Table</h4>
              <div class="table-responsive">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary text-white" asp-controller="dashboard" asp-action="index">Go Back</a>
                    <a class="btn btn-success text-white" asp-controller="category" asp-action="create">Create</a>
                </div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        Category Name
                      </th>
                      <th>
                        SubCategory Name
                      </th>
                      <th>
                        Setting
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                     @foreach (var category in Model)
                   {
                    <tr>
                        <td>
                          @category.Name
                        </td>
                        <td>
                          @foreach (var subcategory in category.SubCategories)
                         {
                             if(subcategory.IsDeleted == false)
                             {
                                 <div>@subcategory.Name</div>
                             }
                         }
                        </td>
                        <td>
                              <div class="d-flex">
                                  <a class="btn btn-primary text-white mx-1" asp-controller="category" asp-action="detail" asp-route-id="@category.Id">Detail</a>
                                  <a class="btn btn-warning text-white mx-1" asp-controller="category" asp-action="update" asp-route-id="@category.Id">Update</a>
                                  <a class="btn btn-danger text-white mx-1" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                                  <a class="btn btn-secondary text-white mx-1" asp-controller="category" asp-action="addsubcategory" asp-route-id="@category.Id">Add SubCategory</a>
                              </div>
                        </td>
                    </tr>
                   }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>