@model List<Subscriber>

<div class="container">
    <div class="row">
       <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Slider - Table</h4>
              <div class="table-responsive">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary text-white" asp-controller="dashboard" asp-action="index">Go Back</a>
                    <a class="btn btn-success text-white" asp-controller="subscriber" asp-action="sendemail">Send Email</a>
                </div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        Email
                      </th>
                      <th>
                        Setting
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var subscriber in Model)
                   {
                    <tr>
                        <td>
                            @subscriber.SubscriberEmail
                        </td>
                        <td>
                              <div class="d-flex">
                                  <a class="btn btn-danger text-white mx-1" asp-controller="subscriber" asp-action="delete" asp-route-id="@subscriber.Id">Delete</a>
                              </div>
                        </td>
                    </tr>
                   }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>