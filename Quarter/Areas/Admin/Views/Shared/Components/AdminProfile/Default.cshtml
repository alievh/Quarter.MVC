@model AppUser

<li class="nav-item nav-profile dropdown">
  <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
        @if(Model.ImageId is not null)
        {
            <img src="~/assets/uploads/images/@Model.Image.Url" alt="profile"/>

        }else
        {
            <img src="~/assets/uploads/images/NoProfilePhoto.jpg" alt="profile"/>
        }
    </a>
  <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
    <a class="dropdown-item">
      <i class="ti-settings text-primary"></i>
      Settings
    </a>
    <a asp-area="" asp-controller="account" asp-action="logout" class="dropdown-item">
      <i class="ti-power-off text-primary"></i>
      Logout
    </a>
  </div>
</li>