@model Service

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Service - Create</h4>
              <form enctype="multipart/form-data" method="post" class="forms-sample">
                <div class="form-group">
                  <label asp-for="Title">Title</label>
                  <input asp-for="Title" class="form-control" placeholder="Create Title">
                </div>
                <div class="form-group">
                  <label asp-for="Description">Description</label>
                  <input asp-for="Description" class="form-control" placeholder="Create Description">
                </div>
                <div class="form-group">
                  <label asp-for="ServiceDetail.Content">Content</label>
                  <textarea class="form-control" asp-for="ServiceDetail.Content" rows="4"></textarea>
                </div>
                <div class="form-group">
                  <label asp-for="ServiceIcon">Service Icon</label>
                  <input accept="image/*" class="form-control" asp-for="ServiceIcon">
                </div>
                <div class="form-group">
                  <label asp-for="MainImage">Cover Image</label>
                  <input accept="image/*" class="form-control" asp-for="MainImage">
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Add Image</label>
                    <input accept="image/*" class="form-control" asp-for="ImageFile">
                </div>
                <h3>Content Images</h3>
                <div class="d-flex">
                     @for (var i = 0; i < Model.Images.Where(n => n.IsMain == false).ToList().Count - 1; i++)
                {
                    <div class="col-lg-4 border py-2 mx-2">
                        <img class="w-100" src="~/assets/uploads/images/@Model.Images.Where(n => n.IsMain == false).ToList()[i].Url" />
                        <div class="d-flex justify-content-center mt-3" >
                            <button class="btn btn-danger text-white" asp-controller="service" asp-action="deleteimage" asp-route-id="@Model.Images.Where(n => n.IsMain == false).ToList()[i].Id" >Delete</button>
                        </div>
                    </div>
                }
                </div>
                <div class="form-group mx-3">
                    <label class="display-2" asp-for="ForHome">Publish HomePage</label>
                    <input class="text-left" asp-for="ForHome">
                </div>
                <button type="submit" class="btn btn-primary mr-2 text-white">Submit</button>
                <button asp-controller="service" asp-action="index" class="btn btn-secondary text-white">Cancel</button>
              </form>
            </div>
          </div>
        </div>
    </div>
</div>