@model Basket

<div id="ltn__utilize-cart-menu" class="ltn__utilize ltn__utilize-cart-menu">
    <div class="ltn__utilize-menu-inner ltn__scrollbar">
        <div class="ltn__utilize-menu-head">
            <span class="ltn__utilize-menu-title">Cart</span>
            <button class="ltn__utilize-close">×</button>
        </div>
        <div class="mini-cart-product-area ltn__scrollbar">
            @if (User.Identity.IsAuthenticated)
            {
                @if(Model.Products is not null)
                {
                     @foreach (var product in Model.Products)
                    {
                         @foreach (var image in product.Images)
                        {
                         <div class="mini-cart-item clearfix">
                            <div class="mini-cart-img">
                                <a href="#"><img src="~/assets/uploads/images/@image.Url" alt="Image"></a>
                                <span class="mini-cart-item-delete"><i class="icon-cancel"></i></span>
                            </div>
                            <div class="mini-cart-info">
                                <h6><a href="#">@product.Title</a></h6>
                                <span class="mini-cart-quantity">1 x $@product.Price</span>
                            </div>
                         </div>
                        }
                    }
                }
            }
        </div>
        <div class="mini-cart-footer">
            <div class="mini-cart-sub-total">
                @if(User.Identity.IsAuthenticated)
                {
                    <h5>Subtotal: <span>$@Model.TotalPrice</span></h5>
                }else
                {
                    <h5>Subtotal: <span>$0</span></h5>
                }
            </div>
            <div class="btn-wrapper">
                <a href="cart.html" class="theme-btn-1 btn btn-effect-1">View Cart</a>
                <a href="cart.html" class="theme-btn-2 btn btn-effect-2">Checkout</a>
            </div>
            <p>Free Shipping on All Orders Over $100!</p>
        </div>

    </div>
</div>