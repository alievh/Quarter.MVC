@using System.Globalization
@model List<Blog>

@foreach (var blog in Model)
{
    <div class="col-lg-12">
        <div class="ltn__blog-item ltn__blog-item-3">
            <div class="ltn__blog-img">
                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.BlogDetailId" ><img src="~/assets/uploads/images/@blog.Images.Where(n => n.IsMain == true).FirstOrDefault().Url" alt="#"></a>
            </div>
            <div class="ltn__blog-brief">
                <div class="ltn__blog-meta">
                    <ul>
                        <li class="ltn__blog-author">
                            <a href="#"><i class="far fa-user"></i>by: @blog.AppUser.Firstname @blog.AppUser.Lastname</a>
                        </li>
                        <li class="ltn__blog-tags">
                            @foreach (var blogCategory in blog.BlogCategories)
                           {
                            <a href="#"><i class="fas fa-tags"></i>@blogCategory.Name</a>
                           }
                        </li>
                    </ul>
                </div>
                <h3 class="ltn__blog-title"><a asp-controller="blog" asp-action="detail" asp-route-id="@blog.BlogDetailId">@blog.Title</a></h3>
                <div class="ltn__blog-meta-btn">
                    <div class="ltn__blog-meta">
                        <ul>
                            <li class="ltn__blog-date"><i class="far fa-calendar-alt"></i>@blog.CreateDate.ToString("MMMM dd, yyyy", CultureInfo.InvariantCulture)</li>
                        </ul>
                    </div>
                    <div class="ltn__blog-btn">
                        <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.BlogDetailId">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}